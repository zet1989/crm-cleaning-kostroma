# Supabase Self-Hosted Configuration
# =====================================
# 
# Для генерации ключей выполните на сервере:
# bash scripts/generate-supabase-keys.sh

# Site Configuration
SITE_URL=https://crm-kostroma.ru
API_EXTERNAL_URL=https://crm-kostroma.ru
ADDITIONAL_REDIRECT_URLS=

# PostgreSQL
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password-min-32-chars

# JWT - Generate using: openssl rand -base64 32
JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long!!
JWT_EXPIRY=3600

# Supabase Keys (generated from JWT_SECRET)
# ВАЖНО: Эти ключи генерируются из JWT_SECRET
# Запустите scripts/generate-supabase-keys.sh для генерации
ANON_KEY=REPLACE_WITH_GENERATED_ANON_KEY
SERVICE_ROLE_KEY=REPLACE_WITH_GENERATED_SERVICE_ROLE_KEY

# Next.js Public Keys (должны совпадать с ANON_KEY)
NEXT_PUBLIC_SUPABASE_URL=https://crm-kostroma.ru
NEXT_PUBLIC_SUPABASE_ANON_KEY=REPLACE_WITH_GENERATED_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_GENERATED_SERVICE_ROLE_KEY

# Auth Settings
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
ENABLE_ANONYMOUS_USERS=false

# SMTP (optional - for email confirmation)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@crm-kostroma.ru

# Studio
STUDIO_DEFAULT_ORGANIZATION=CRM Cleaning Kostroma
STUDIO_DEFAULT_PROJECT=CRM

# Application
NOVOFON_APP_ID=your_novofon_app_id
NOVOFON_SECRET=your_novofon_secret
OPENROUTER_API_KEY=your_openrouter_api_key

